<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginLeft="@dimen/radio_group_margin"
    android:layout_marginRight="@dimen/radio_group_margin"
    android:gravity="center_horizontal">

    <RadioButton
        android:gravity="center"
        android:id="@+id/rbOverall"
        style="@style/RadioButtonUnderlined"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@drawable/ic_overall"
        android:text="@string/rb_overall"/>

    <RadioButton
        android:gravity="center"
        android:id="@+id/rbFriends"
        style="@style/RadioButtonUnderlined"
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableTop="@mipmap/ic_contacts"
        android:text="@string/rb_friends"/>

